{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp"],
            "rootPatterns": [
                ".clss",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                }
            }       
        }
    },
    "suggest.maxCompleteItemCount": 20,
    "suggest.minTriggerInputLength": 2
}
